<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:orientation="vertical"
    tools:context="com.sampson.yjj.xianba.firstname.XingShiSearchActivity">

    <LinearLayout

        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:background="#afafaf"
        android:alpha="0.8"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/xingshi_search_back_img"
            android:layout_width="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back_img"
            android:layout_height="20dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/xingshi_edit_content"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:textSize="14sp"
            android:background="@null"
            android:gravity="center"
            android:hint="请输入要查询的姓氏"
            />
        <TextView
            android:id="@+id/xingshi_search_btn"
            android:layout_width="60dp"
            android:text="搜索"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:background="@drawable/shape_corner_one"
            android:layout_height="28dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="400dp">
        <TextView
            android:id="@+id/text_yang"
            android:text="杨"
            android:background="#fc5cfc"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/text_zhang"
            android:background="#008c8c"
            android:text="张"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/text_zhao"
            android:background="#fcfc44"
            android:text="赵"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" />
    </LinearLayout>
</LinearLayout>
