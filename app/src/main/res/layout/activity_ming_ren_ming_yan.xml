<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sampson.yjj.xianba.famouspeople.MingRenMingYanActivity">
    <LinearLayout
        android:background="#bb99bb"
        android:layout_width="match_parent"
        android:padding="6dp"
        android:gravity="center_vertical"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center"
            android:id="@+id/famous_back_img"
            android:src="@drawable/back_img"/>

        <EditText
            android:layout_marginLeft="5dp"
            android:id="@+id/famous_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@null"
            android:hint="输入名人名言关键字"/>

        <TextView
            android:id="@+id/famous_search"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/shape_corner_one"
            android:text="搜索"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:padding="3dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/mingyan_txt"
        android:layout_width="match_parent"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        android:text="名人名言"/>
    <TextView
        android:id="@+id/mingren_txt"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="200dp"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="名人"/>
    </LinearLayout>
    <ListView
        android:id="@+id/famous_listview"
        android:padding="5dp"
        android:background="#e6e6a6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>
