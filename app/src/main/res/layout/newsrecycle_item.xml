<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp"
    android:layout_marginLeft="5dp"
    android:layout_width="match_parent" android:layout_height="80dp">

    <ImageView
        android:id="@+id/newsthumb_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/newstitle_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/newsthumb_img"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/newsthumb_img"
        android:layout_toRightOf="@+id/newsthumb_img"
        android:text="TextView" />

    <TextView
        android:id="@+id/newsauthor_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/newstitle_txt"
        android:layout_alignStart="@+id/newstitle_txt" />

    <TextView
        android:id="@+id/newstime_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/newsauthor_txt"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="TextView" />
</RelativeLayout>