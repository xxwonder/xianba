<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sampson.yjj.xianba.homepage.HomeActivity">
    <TextView
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:text="闲吧"
        android:background="#4B77cc"
        android:gravity="center"
        android:textColor="#eeeeee"
        android:layout_height="40dp" />
    <android.support.v4.view.ViewPager
        android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>
    <!--android:background="#aFC1aB"-->
    <LinearLayout

        android:background="#ECECEC"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp" />
        <LinearLayout
            android:id="@+id/home_shouye"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/home_shouye_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/home_shouye2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="首页"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="60dp" />
        <LinearLayout
            android:id="@+id/home_fenlei"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/home_fenlei_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/home_fenlei1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="分类"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="60dp" />
        <LinearLayout
            android:id="@+id/home_wo"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/home_wo_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/home_wo1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="我"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp" />
    </LinearLayout>
</LinearLayout>
