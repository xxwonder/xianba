<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.sampson.yjj.xianba.firstname.FirstNameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#f6f6f6"
        android:alpha="0.5"
        android:gravity="center"
        android:layout_height="30dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:id="@+id/xinshi_back_img"
            android:src="@drawable/back_img"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/xingshi_search_img"
            android:layout_width="250dp"
            android:layout_height="22dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@drawable/xingshi_search"/>
        </LinearLayout>
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            />
    </LinearLayout>
    <TextView
    android:id="@+id/xingshi_name"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:padding="3dp"
        android:id="@+id/xingshi_origin"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </ScrollView>
</LinearLayout>
